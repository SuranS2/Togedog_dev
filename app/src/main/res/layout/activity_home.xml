<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/Home1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#8f7a65">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/hometitle"
            android:layout_marginLeft="40dp"/>
        <Button
            android:id="@+id/myroom_bt"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/mybt"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fef4e8"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지역 검색"
            android:textSize="18dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"/>
        <LinearLayout
            android:id="@+id/Home2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <Spinner
                android:id="@+id/Spinner_do"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:entries="@array/Do"
                android:layout_marginLeft="10dp"/>

            <Spinner
                android:id="@+id/Spinner_Gun"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:entries="@array/Gun" />
            <Button
                android:id="@+id/Search"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/search"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/Home3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="방 생성"
                android:textSize="15dp"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/Create_room"
                android:layout_marginRight="10dp"
                />
            <Button
                android:id="@+id/Create_room"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/crearoom"
                android:layout_marginRight="15dp"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ListView
                android:id="@+id/chat_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </ListView>
            <!--그리드뷰 노쓸모됨-->
            <GridView
                android:id="@+id/Home_grid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:columnWidth="70dp"
                android:gravity="center"
                android:horizontalSpacing="10dp"
                android:numColumns="2"
                android:stretchMode="columnWidth"
                android:verticalSpacing="10dp"
                android:visibility="gone">

            </GridView>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
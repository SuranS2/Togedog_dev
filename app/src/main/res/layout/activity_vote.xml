                android:background="@drawable/calender" />

            <TextView
                android:id="@+id/txtView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="시간"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/vote_time3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/date_time" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":" />

                <Spinner
                    android:id="@+id/vote_minute3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/date_minute" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>






    <LinearLayout
        android:id="@+id/Vote4"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:gravity="center">
        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="등록하기"
            android:layout_marginRight="10dp"
            android:background="#8f7a65"
            android:textColor="#fef4e8"
            android:id="@+id/button_create_vote"
            android:onClick="onClick"/>
        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="취소"
            android:layout_marginLeft="10dp"
            android:background="#8f7a65"
            android:textColor="#fef4e8"
            android:id="@+id/button2_cancel_vote"/>
    </LinearLayout>

</LinearLayout>
